	public abstract JLabel setlPos5();
	public abstract JLabel setlPos6();
	public abstract JLabel setlPos7();
	public abstract JLabel setlPos8();
	public abstract JLabel setlPos9();
	public abstract JLabel setlPos10();
	public abstract JLabel setlPos11();
